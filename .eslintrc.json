{
  "extends": [
    "next/core-web-vitals"
  ],
  "rules": {
    "import/order": "off",
    "no-unused-vars": "warn",
    "react-hooks/exhaustive-deps": "warn",
    "object-shorthand": "warn",
    "tailwindcss/classnames-order": "off",
    "tailwindcss/enforces-shorthand": "off",
    "tailwindcss/no-custom-classname": "off"
  },
  "plugins": ["tailwindcss"],
  "settings": {
    "tailwindcss": {
      "config": "./tailwind.config.js"
    }
  }
}
